<form action="/createData">
    <input type="hidden" name="id" value="<%= editrecord ? editrecord.id : '' %>">

    name: <input type="text" name="name" value="<%= editrecord ? editrecord.name : '' %>"><br><br>

    surname: <input type="text" name="surname" value="<%= editrecord ? editrecord.surname : '' %>"><br><br>

    <button type="submit">Submit</button>
</form>

<table border="1" style="margin-top:20px;">
    <tr>
        <th>name</th>
        <th>surname</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>

    <% data.map((i)=> { %>
        <tr>
            <td><%= i.name %></td>
            <td><%= i.surname %></td>

            <td>
                <a href="/deleteData/<%= i._id %>">
                    <button>Delete</button>
                </a>
            </td>

            <td>
                <a href="/editData/<%= i._id %>">
                    <button>Edit</button>
                </a>
            </td>
        </tr>
    <% }) %>
</table>
